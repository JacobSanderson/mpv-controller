{
  "required_api_version": "^2.0.0",
  "name": "MPV controller",
  "description": "Control MPV playlists",
  "developer_name": "Viktor",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.05
  },
  "preferences": [
    {
      "id": "mpv-controler",
      "type": "keyword",
      "name": "mpv-controller",
      "default_value": "m"
    },
    {
      "id": "music-directory",
      "type": "text",
      "name": "Music directory",
      "description": "Where you have your music folders and files",
      "default_value": "~/Music"
    },
    {
      "id": "mpv-config",
      "type": "text",
      "name": "Mpv config socket",
      "description": "Path to your mpv unix socket",
      "default_value": "~/.config/mpv/socket"
    }
  ]
}
